<Window x:Class="Arcade_mania_backend_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arcade_mania_backend_WPF"
        mc:Ignorable="d"
        Title="Arcade Mania – Admin"
        Height="600"
        Width="1100">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <!-- Bal: részletes nézet -->
            <ColumnDefinition Width="3*" />
            <!-- Jobb: lista -->
        </Grid.ColumnDefinitions>

        <!-- BAL OLDAL: részletes szerkesztő + keresés/törlés + új user -->

        <StackPanel Grid.Column="0" Margin="0,0,10,0">

            <!-- Kijelölt felhasználó adatai + 3 score -->
            <GroupBox Header="Kijelölt felhasználó (szerkesztés)" Margin="0,0,0,10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- ID -->
                        <RowDefinition Height="Auto"/>
                        <!-- Név -->
                        <RowDefinition Height="Auto"/>
                        <!-- Jelszó -->
                        <RowDefinition Height="Auto"/>
                        <!-- Score 1 -->
                        <RowDefinition Height="Auto"/>
                        <!-- Score 2 -->
                        <RowDefinition Height="Auto"/>
                        <!-- Score 3 -->
                        <RowDefinition Height="Auto"/>
                        <!-- Gombok -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ID -->
                    <TextBlock Text="ID:"
                               Grid.Row="0"
                               Grid.Column="0"
                               Margin="0,0,5,5"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="SelectedUserIdTextBox"
                             Grid.Row="0"
                             Grid.Column="1"
                             Margin="0,0,0,5"
                             IsReadOnly="True"/>

                    <!-- Név -->
                    <TextBlock Text="Név:"
                               Grid.Row="1"
                               Grid.Column="0"
                               Margin="0,0,5,5"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="SelectedUserNameTextBox"
                             Grid.Row="1"
                             Grid.Column="1"
                             Margin="0,0,0,5"/>

                    <!-- Jelszó -->
                    <TextBlock Text="Jelszó:"
                               Grid.Row="2"
                               Grid.Column="0"
                               Margin="0,0,5,5"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="SelectedUserPasswordTextBox"
                             Grid.Row="2"
                             Grid.Column="1"
                             Margin="0,0,0,5"/>

                    <!-- Score 1 -->
                    <TextBlock x:Name="Score1NameTextBlock"
                               Text=""
                               Grid.Row="3"
                               Grid.Column="0"
                               Margin="0,0,5,5"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="Score1TextBox"
                             Grid.Row="3"
                             Grid.Column="1"
                             Margin="0,0,0,5"
                             IsEnabled="False"/>

                    <!-- Score 2 -->
                    <TextBlock x:Name="Score2NameTextBlock"
                               Text=""
                               Grid.Row="4"
                               Grid.Column="0"
                               Margin="0,0,5,5"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="Score2TextBox"
                             Grid.Row="4"
                             Grid.Column="1"
                             Margin="0,0,0,5"
                             IsEnabled="False"/>

                    <!-- Score 3 -->
                    <TextBlock x:Name="Score3NameTextBlock"
                               Text=""
                               Grid.Row="5"
                               Grid.Column="0"
                               Margin="0,0,5,5"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="Score3TextBox"
                             Grid.Row="5"
                             Grid.Column="1"
                             Margin="0,0,0,5"
                             IsEnabled="False"/>

                    <!-- Gombok -->
                    <StackPanel Grid.Row="6"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Content="Mezők ürítése"
                                Width="120"
                                Margin="0,0,10,0"
                                Click="ClearFieldsButton_Click"/>
                        <Button Content="Mentés"
                                Width="120"
                                Click="SaveUserButton_Click"/>
                    </StackPanel>

                </Grid>
            </GroupBox>

            <!-- Keresés / törlés ID alapján -->
            <GroupBox Header="Keresés / törlés ID alapján" Margin="0,0,0,10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="SearchUserIdTextBox"
                             Grid.Column="0"
                             Margin="0,0,10,0"/>

                    <Button Content="Lekérés"
                            Grid.Column="1"
                            Width="90"
                            Margin="0,0,10,0"
                            Click="FetchUserByIdButton_Click"/>

                    <Button Content="Törlés"
                            Grid.Column="2"
                            Width="90"
                            Click="DeleteUserButton_Click"/>
                </Grid>
            </GroupBox>

            <!-- Új felhasználó + frissítés -->
            <GroupBox Header="Új felhasználó létrehozása">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- név -->
                        <RowDefinition Height="Auto"/>
                        <!-- jelszó -->
                        <RowDefinition Height="Auto"/>
                        <!-- létrehozás -->
                        <RowDefinition Height="Auto"/>
                        <!-- frissítés -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Név:"
                               Grid.Row="0"
                               Grid.Column="0"
                               Margin="0,0,5,5"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="NewUserNameTextBox"
                             Grid.Row="0"
                             Grid.Column="1"
                             Margin="0,0,0,5"/>

                    <TextBlock Text="Jelszó:"
                               Grid.Row="1"
                               Grid.Column="0"
                               Margin="0,0,5,5"
                               VerticalAlignment="Center"/>
                    <TextBox x:Name="NewUserPasswordTextBox"
                             Grid.Row="1"
                             Grid.Column="1"
                             Margin="0,0,0,5"/>

                    <Button Content="Létrehozás"
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Right"
                            Width="120"
                            Click="CreateUserButton_Click"/>

                </Grid>
            </GroupBox>

        <!-- ÚJ: frissítés gomb -->
        <Button Content="Adatok frissítése"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Width="140"
            Click="RefreshButton_Click"/>

        </StackPanel>

        <!-- JOBB OLDAL: user lista + 3 score oszlop -->
        <DataGrid x:Name="UsersGrid"
                  Grid.Column="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserSortColumns="False"
                  SelectionMode="Single"
                  SelectionChanged="UsersGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding Id}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Név"
                                    Binding="{Binding Name}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Jelszó"
                                    Binding="{Binding Password}"
                                    Width="2*"/>

                <DataGridTextColumn Header="Fighter"
                                    Binding="{Binding Scores[0].HighScore}"
                                    Width="*"/>
                <DataGridTextColumn Header="Memory"
                                    Binding="{Binding Scores[1].HighScore}"
                                    Width="*"/>
                <DataGridTextColumn Header="Snake"
                                    Binding="{Binding Scores[2].HighScore}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
